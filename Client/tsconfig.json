{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/(routes)/home/page.tsx", "src/components/hero.tsx", "src/components/createPost.tsx", "src/utils/socket.ts", "src/utils/date.format.ts", "src/app/(routes)/auth/[route]/page.tsx", "src/app/(routes)/auth/login.tsx", "src/app/(routes)/auth/signup.tsx", "src/app/layout.tsx", "src/app/page.tsx", "src/components/postCard.tsx"],
  "exclude": ["node_modules"]
}
